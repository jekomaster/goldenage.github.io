<script>
  // Function to dynamically set the height of the golden-age-background
  function setDynamicHeight() {
    const background = document.querySelector('.golden-age-background') as HTMLElement | null;

    if (background) {
      const windowWidth = window.innerWidth;
      const minViewportWidth = 300; // Minimum width for calculation
      const maxViewportWidth = window.screen.availWidth; // Maximum width (screen size)
      const minVH = 15; // Minimum height in vh
      const maxVH = 50; // Maximum height in vh

      // Calculate clamped width and dynamic height
      const clampedWidth = Math.max(minViewportWidth, Math.min(windowWidth, maxViewportWidth));
      const dynamicHeight = minVH + ((clampedWidth - minViewportWidth) /
                         (maxViewportWidth - minViewportWidth)) * (maxVH - minVH);

      // Apply the calculated height to the container
      background.style.height = `${dynamicHeight}vh`;

      // Apply the calculated height to the container
      background.style.height = `${dynamicHeight}vh`;
    }
  }

  // Call the function on window load and resize
  window.addEventListener('load', setDynamicHeight);
  window.addEventListener('resize', setDynamicHeight);
</script>



