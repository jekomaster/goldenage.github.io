<style>
    #staggering {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: #f4f4f4; /* Initial background color */
    }
  
    .feature-animation {
      width: 80%;
      height: 300px;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #f0f0f0; /* Fallback background color */
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      overflow: hidden; /* Ensures no content spills out */
    }
  </style>
  
  <div id="staggering">
    <div>
      <div class="feature-animation">
        About Section Content Here
      </div>
    </div>
  </div>
  
  <script is:inline>
    import('gsap').then((gsap) => {
      // Animate the background color of the feature-animation div
      gsap.to(".feature-animation", {
        backgroundColor: "#ff7f50", // Target background color
        duration: 2,               // Duration of the animation
        ease: "power2.inOut",       // Easing function
        repeat: -1,                 // Infinite loop
        yoyo: true,                 // Reverse the animation
      });
  
      // Optional: Add additional animations to the children, if needed
      gsap.to(".feature-animation > *", {
        scale: 1.2,
        duration: 1.5,
        ease: "elastic.out(1, 0.3)",
        stagger: 0.3,
        repeat: -1,
        yoyo: true,
      });
    });
  </script>
  